pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build("${env.DOCKER_HUB_USERNAME}/your-image-name")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('', "${env.DOCKER_HUB_CREDENTIALS}") {
                        def dockerImage = docker.build("${env.DOCKER_HUB_USERNAME}/your-image-name")
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
