pipeline {
    agent any
    environment {
        DOCKER_HUB_USERNAME = credentials('docker-hub-credentials')
        DOCKER_HUB_PASSWORD = credentials('docker-hub-credentials')
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ${DOCKER_HUB_USERNAME}/your-image-name .'
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    sh """
                    echo ${DOCKER_HUB_PASSWORD} | docker login -u ${DOCKER_HUB_USERNAME} --password-stdin
                    docker push ${DOCKER_HUB_USERNAME}/your-image-name
                    """
                }
            }
        }
    }
}
